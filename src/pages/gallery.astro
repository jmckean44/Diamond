---
import Layout from "../components/Layout.astro";
const pageTitle = "The Diamond Rental Living - Gallery";
import { Image } from "astro:assets";
import svgDiamondIcon from "../img/diamond.svg";

import bldgA32South from "../img/bldg-a-32nd-south.jpg";
import bldgA32West from "../img/bldg-a-32nd-west.jpg";
import bldgA32North from "../img/bldg-a-32nd-north.jpg";
import bldgA32East from "../img/bldg-a-32nd-east.jpg";
import bldgA25South from "../img/bldg-a-25th-south.jpg";
import bldgA25West from "../img/bldg-a-25th-west.jpg";
import bldgA25North from "../img/bldg-a-25th-north.jpg";
import bldgA25East from "../img/bldg-a-25th-east.jpg";
import bldgA20South from "../img/bldg-a-20th-south.jpg";
import bldgA20West from "../img/bldg-a-20th-west.jpg";
import bldgA20North from "../img/bldg-a-20th-north.jpg";
import bldgA20East from "../img/bldg-a-20th-east.jpg";
import bldgA15South from "../img/bldg-a-15th-south.jpg";
import bldgA15west from "../img/bldg-a-15th-west.jpg";
import bldgA15North from "../img/bldg-a-15th-north.jpg";
import bldgA15East from "../img/bldg-a-15th-east.jpg";
import bldgA10South from "../img/bldg-a-10th-south.jpg";
import bldgA10West from "../img/bldg-a-10th-west.jpg";
import bldgA10North from "../img/bldg-a-10th-north.jpg";
import bldgA10East from "../img/bldg-a-10th-east.jpg";
import bldgA5South from "../img/bldg-a-5th-south.jpg";
import bldgA5West from "../img/bldg-a-5th-west.jpg";
import bldgA5North from "../img/bldg-a-5th-north.jpg";
import bldgA5East from "../img/bldg-a-5th-east.jpg";

import { getImage } from "astro:assets";
import bannerBg from "../img/banner-suites.jpg";
const bannerBgImage = await getImage({ src: bannerBg });

import constructionVideo1 from "../img/gallery-video-1.jpg";
import constructionVideo2 from "../img/gallery-video-2.jpg";
const video1 = await getImage({ src: constructionVideo1 });
const video2 = await getImage({ src: constructionVideo2 });
---

<Layout {pageTitle}>
	<section class="reveal-container" style={`background-image: url('${bannerBgImage.src}')`}>
		<Image src={svgDiamondIcon} class="reveal" loading="eager" alt="The Diamond icon" />
	</section>

	<section class="container top bottom">
		<div class="grid-container">
			<div class="grid-x grid-padding-x align-middle">
				<div class="cell small-18 paragraph-max-width">
					<h1>Gallery</h1>
					<p>The Diamond is not just a building, but a purpose-built rental community with the Junction vibe, offering local flavour and a city feeling. Modern open concept 1, 2 and 3 bedroom suites overlooking the city, while connecting you to every part of it with the TTC at your doorstep and just minutes to the subway, UP Express and GO Train.</p>
				</div>
			</div>
		</div>
	</section>

	<section class="container bottom" id="media">
		<div class="grid-container">
			<div class="grid-x grid-padding-x align-middle">
				<div class="cell small-18 medium-9" id="video-1" style={`background-image: url('${video1.src}')`}>
					<a href="#" class="js-video-button-1" data-channel="custom" role="button" aria-label="open video in modal window">PLAY VIDEO</a>
				</div>
				<div class="cell small-18 medium-9" id="video-2" style={`background-image: url('${video2.src}')`}>
					<a href="#" class="js-video-button-2" data-channel="custom" role="button" aria-label="open video in modal window">PLAY VIDEO</a>
				</div>
			</div>
		</div>
	</section>

	<section class="container bottom" id="building-wrapper">
		<div class="grid-container">
			<div id="swiper-vertical-nav">
				<div class="swiper-pagination swiper-pagination-v"></div>
			</div>

			<div>
				<div class="swiper-container swiper-container-v">
					<div class="swiper-wrapper">
						<div class="swiper-slide">
							<div class="swiper-container swiper-container-h">
								<div class="swiper-wrapper">
									<div class="swiper-slide"><Image loading="eager" src={bldgA32South} alt="The Diamond 32nd Floor South View" /></div>
									<div class="swiper-slide"><Image loading="eager" src={bldgA32West} alt="The Diamond 32nd Floor West View" /></div>
									<div class="swiper-slide"><Image loading="eager" src={bldgA32North} alt="The Diamond 32nd Floor North View" /></div>
									<div class="swiper-slide"><Image loading="eager" src={bldgA32East} alt="The Diamond 32nd Floor East View" /></div>
								</div>
								<div class="swiper-pagination swiper-pagination-h"></div>
							</div>
						</div>

						<div class="swiper-slide">
							<div class="swiper-container swiper-container-h">
								<div class="swiper-wrapper">
									<div class="swiper-slide"><Image loading="lazy" src={bldgA25South} alt="The Diamond 25th Floor South View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA25West} alt="The Diamond 25th Floor West View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA25North} alt="The Diamond 25th Floor North View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA25East} alt="The Diamond 25th Floor East View" /></div>
								</div>
								<div class="swiper-pagination swiper-pagination-h"></div>
							</div>
						</div>

						<div class="swiper-slide">
							<div class="swiper-container swiper-container-h">
								<div class="swiper-wrapper">
									<div class="swiper-slide"><Image loading="lazy" src={bldgA20South} alt="The Diamond 20th Floor South View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA20West} alt="The Diamond 20th Floor West View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA20North} alt="The Diamond 20th Floor North View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA20East} alt="The Diamond 20th Floor East View" /></div>
								</div>
								<div class="swiper-pagination swiper-pagination-h"></div>
							</div>
						</div>

						<div class="swiper-slide">
							<div class="swiper-container swiper-container-h">
								<div class="swiper-wrapper">
									<div class="swiper-slide"><Image loading="lazy" src={bldgA15South} alt="The Diamond 15th Floor South View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA15west} alt="The Diamond 15th Floor West View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA15North} alt="The Diamond 15th Floor North View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA15East} alt="The Diamond 15th Floor East View" /></div>
								</div>
								<div class="swiper-pagination swiper-pagination-h"></div>
							</div>
						</div>

						<div class="swiper-slide">
							<div class="swiper-container swiper-container-h">
								<div class="swiper-wrapper">
									<div class="swiper-slide"><Image loading="lazy" src={bldgA10South} alt="The Diamond 10th Floor South View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA10West} alt="The Diamond 10th Floor West View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA10North} alt="The Diamond 10th Floor North View" /></div>
									<div class="swiper-slide"><Image loading="lazy" src={bldgA10East} alt="The Diamond 10th Floor East View" /></div>
								</div>
								<div class="swiper-pagination swiper-pagination-h"></div>
							</div>
						</div>

						<div class="swiper-slide">
							<div class="swiper-container swiper-container-h">
								<div class="swiper-wrapper">
									<div class="swiper-slide"><Image src={bldgA5South} alt="The Diamond 5th Floor South View" /></div>
									<div class="swiper-slide"><Image src={bldgA5West} alt="The Diamond 5th Floor West View" /></div>
									<div class="swiper-slide"><Image src={bldgA5North} alt="The Diamond 5th Floor North View" /></div>
									<div class="swiper-slide"><Image src={bldgA5East} alt="The Diamond 5th Floor East View" /></div>
								</div>
								<div class="swiper-pagination swiper-pagination-h"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>

<script is:inline src="/jquery-3.5.1.min.js"></script>
<script is:inline src="/modal-video.min.js"></script>
<script is:inline>
	$(".js-video-button-1").modalVideo({
		url: "/diamond-construction-1.mp4",
		showinfo: 0,
		controls: 1,
	});
	$(".js-video-button-2").modalVideo({
		url: "/diamond-construction-2.mp4",
		showinfo: 0,
		controls: 1,
	});
</script>

<script is:inline src="/swiper.js"></script>
<link href="/swiper.min.css" rel="stylesheet" />

<script is:inline>
	var floor = ["32th", "25th", "20th", "15th", "10th", "5th"];
	var direction = ["S", "W", "N", "E"];

	var swiperV = new Swiper(".swiper-container-v", {
		pagination: {
			el: ".swiper-pagination-v",
			clickable: true,
			renderBullet: function (index, className) {
				return '<span class="' + className + '">' + floor[index] + "</span>";
			},
		},
		paginationClickable: true,
		speed: 1500,
		direction: "vertical",
		spaceBetween: 0,
	});

	var swiperH = new Swiper(".swiper-container-h", {
		lazy: true,
		pagination: {
			el: ".swiper-pagination-h",
			clickable: true,
			renderBullet: function (index, className) {
				return '<span class="' + className + '">' + direction[index] + "</span>";
			},
		},
		paginationClickable: true,
		speed: 1500,
		direction: "horizontal",
		spaceBetween: 0,
		nested: true,
	});

	// PAGER
	var swiperVertBullet = $(".swiper-pagination-v .swiper-pagination-bullet");
	var swiperHorMenu = $(".swiper-pagination-h .swiper-pagination-bullets");

	$(swiperVertBullet).click(function () {
		$(swiperHorMenu).fadeOut(100).fadeIn(2000);
	});
</script>
